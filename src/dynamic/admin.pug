doctype html
include includes/head.pug
script(src="/assets/js/admin.js")
link(rel="stylesheet" href="/assets/css/table.css")
body
  include includes/nav.pug
  #content
    span.header
        h1 Admin Area
    #bots-list
        br
        h5 Awaiting Approval
        table
            thead
                tr
                th(scope='col') Nome
                th(scope='col') Prefixo
                th(scope='col') Ver
                th(scope='col') Gerir 
            tbody.bots-list-body
                if (bots)
                    each val in bots
                        tr
                            td
                                img.rounded-circle(src=`${val.logo}`, alt="")
                                |      #{val.username}
                            td #{val.prefix}
                            td 
                                a.btn.btn-primary.pad-right(target="__blank" href=`https://discord.com/oauth2/authorize?client_id=${val.botid}&scope=bot&guild_id=${id}&permissions=0`) Invite
                                a.btn.btn-primary.pad-right(target="__blank" href=`/bots/${val.botid}`) Ver
                                a.btn.btn-primary(target="__blank" href=`/bots/edit/${val.botid}/`) Editar
                            td
                                a.btn.btn-secondary.pad-right(onclick=`note('${val.note || "No note"}', '${val.username}')`) Ver nota
                                a.btn.btn-success.pad-right(onclick=`approve('${val.botid}', '${val.username}')`) Aprovar
                                a.btn.btn-danger(onclick=`deny('${val.botid}', '${val.username}')`) Reprovar
