doctype html
include includes/head.pug
body
    include includes/nav.pug
    #content
        span.header
            h1 Pesquisar
            p
                span.strikethrough Apenas mais uma botlist de bots para o Discord.
        br
        .input-holder
            input#searchbar.input(type='text' placeholder=' ')
            .placeholder Pesquisar
        #cards
            if (cards.length == 0)
                p Nenhum bot encontrado. Tente procurar outra coisa.
            else
                each card in cards
                    div.card
                        img.icon(src=card.logo)
                        h2.title #{card.username}
                            a.likes(href=`/bots/like/${card.botid}`)
                                i.far.fa-heart
                                | #{card.likes || 0}
                        p.desc #{card.description}
                        a.small.button(href=`/bots/${card.botid}`) Ver informações do bot
        br
    script.
        const node = document.getElementById("searchbar");
        node.addEventListener("keyup", function(event) {
        if (event.key === "Enter") {
        location.href = `/bots/search/?q=${node.value}`
        }
        });
